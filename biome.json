{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 140,
		"ignore": [
			"+html.tsx",
			"src/gql/__generated__",
			"db/types/*.db.d.ts"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		},
		"globals": [
			"test"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "off",
				"noUnusedVariables": "error",
				"useHookAtTopLevel": "error"
			},
			"suspicious": {
				"useAwait": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		},
		"ignore": [
			"+html.tsx",
			"src/gql/__generated__"
		]
	},
	"overrides": [
		{
			"ignore": [
				"*.js"
			]
		}
	]
}