{
  "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "sourceMap": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "${configDir}/src",
      "outDir": "${configDir}/dist",
      "baseUrl": "${configDir}/.",
      "paths": {
          "@/*": [
              "${configDir}/src/*"
          ]
      },
  },
  "include": [
      "${configDir}/src"
  ],
  "exclude": [
      "${configDir}/node_modules",
      "${configDir}/dist",
      "${configDir}/test"
  ],
  "types": [
      "vitest/globals",
      "vitest/importMeta"
  ]
}